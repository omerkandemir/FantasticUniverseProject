@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Giriş Formu</title>
    <link href="~/css/LoginForm.css?v=1.0" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="form-container">
        <h2>Kullanıcı Giriş</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
        <form method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı Adınız" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifreniz" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row align-items-center">
                <div class="form-group col-md-6 text-left">
                    <a href="/Register/Index/" class="account-link">Bir hesabınız yok mu?</a>
                </div>
                <div class="form-group col-md-6 form-check text-right">
                    <input type="checkbox" class="form-check-input" id="rememberMe" value="true" />
                    <label class="form-check-label" for="rememberMe">Beni Hatırla</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        document.querySelector("form").addEventListener("submit", function (event) {
            const submitButton = this.querySelector("button[type='submit']");
            submitButton.disabled = true;
            submitButton.innerText = "Lütfen Bekleyin...";
        });
    </script>
</body>
</html>