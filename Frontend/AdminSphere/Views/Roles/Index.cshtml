@model List<GetAppRoleResponse>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mx-auto p-6">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Roller</h1>
        <a href="/Roles/Create" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">
            Yeni Rol Ekle
        </a>
    </div>

    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
        <thead>
            <tr class="bg-gray-200 text-gray-700 text-left">
                <th class="py-3 px-4 border-b">ID</th>
                <th class="py-3 px-4 border-b">Rol Adı</th>
                <th class="py-3 px-4 border-b">Durum</th>
                <th class="py-3 px-4 border-b">Oluşturulma Tarihi</th>
                <th class="py-3 px-4 border-b text-right">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr class="hover:bg-gray-50">
                    <td class="py-3 px-4 border-b">@role.Id</td>
                    <td class="py-3 px-4 border-b">@role.Name</td>
                    <td class="py-3 px-4 border-b">
                        <span class="px-2 py-1 text-sm rounded
                    @if(role.IsActive) {
                    @("bg-green-100 text-green-700")
                    } else {
                    @("bg-red-100 text-red-700")
                    }">
                            @if (role.IsActive) { @* "Aktif" *@ }else{ @* "Pasif" *@ }
                        </span>
                    </td>
                    <td class="py-3 px-4 border-b">@role.CreatedDate.ToShortDateString()</td>
                    <td class="py-3 px-4 border-b text-right space-x-2">
                        <a href="/Roles/Edit/@role.Id" class="text-blue-500 hover:text-blue-700">Düzenle</a>
                        <a href="/Roles/Delete/@role.Id" class="text-red-500 hover:text-red-700">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
