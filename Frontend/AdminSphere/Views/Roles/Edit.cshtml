@model UpdateAppRoleRequest
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold mb-4">Rol Güncelle</h1>

    <form method="post" class="bg-white shadow-md rounded-lg p-6">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-4">
            <label for="Name" class="block text-gray-700 font-bold mb-2">Rol Adı</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div class="mb-4">
            <label for="IsActive" class="block text-gray-700 font-bold mb-2">Durum</label>
            <select id="IsActive" name="IsActive" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="true" selected="@(Model.IsActive ? "selected" : null)">Aktif</option>
                <option value="false" selected="@(Model.IsActive ? null : "selected")">Pasif</option>
            </select>
        </div>

        <div class="flex justify-end">
            <a href="/Roles" class="mr-4 text-gray-500 hover:underline">İptal</a>
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">
                Güncelle
            </button>
        </div>
    </form>
</div>


