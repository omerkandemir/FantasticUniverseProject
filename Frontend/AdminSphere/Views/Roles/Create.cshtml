
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold mb-4">Yeni Rol Ekle</h1>

    <form method="post" class="bg-white shadow-md rounded-lg p-6">
        <div class="mb-4">
            <label for="Name" class="block text-gray-700 font-bold mb-2">Rol Adı</label>
            <input type="text" id="Name" name="Name" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div class="flex justify-end">
            <a href="/Roles" class="mr-4 text-gray-500 hover:underline">İptal</a>
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">
                Kaydet
            </button>
        </div>
    </form>
</div>
